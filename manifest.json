{
  "manifest_version": 2,

  "name": "Background Image Automtic Changer",
  "version": "0.1",
  "description": "Chrome Extension for automatic change of background images on declared URLs.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "Background Automatic Changer",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ]
}